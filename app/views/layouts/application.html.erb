<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar">
      <div >
      <%= link_to "RecipeBlog", root_path %>
      <div>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Home", root_path, aria_current:"page" %>
        </li>
        <li >
        <%= link_to "Recipes", recipes_path %>
        </li>
        <li>
          <%= link_to "Public Recipes", public_recipes_path %>
        </li>
        <li class="nav-item">
        <%= link_to "General Shopping List", general_shopping_lists_path, class:"nav-link" %>
      </li>
      </ul>
      <% if user_signed_in? %>
      <%= current_user.name %><br/>
      <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: 'delete' },  class: "btn btn-danger btn-lg"%>
      <%else%>
      <%= link_to "Sign up!", new_user_registration_path,  class: "btn btn-success btn-lg"%> <%= link_to "Sign in",user_session_path,  class: "btn btn-primary btn-lg"%>
      <%end%>
        </span>
      </div>
    </div>
  </nav>

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
    <%= yield %>
  </body>
</html>
