<%= stylesheet_link_tag "application", "recipe" %>
<p style="color: green"><%= notice %></p>

<div class="container pad max_width">
  <h1>Recipes</h1>
  <div class="recipes pad flex border">
    <% @recipes.each do |recipe| %>
    <div class="recipe_card pad flex">
      <div>
        <p><%= link_to recipe.name, recipe %></p>
        <p>remove</p>
      </div>

      <div>
        <p>
          <%= recipe.description %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
  <%= button_to "New recipe", new_recipe_path, class: "recipe_btn", method: "get" %>
</div>
